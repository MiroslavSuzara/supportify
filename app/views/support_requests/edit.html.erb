<h1>Edit Support Request</h1>

<% if @support_request.errors.any? %>
  <ul>
    <% @support_request.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @support_request do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control", type: "email" %>
  <br>
  <div class="float">
    <%= f.radio_button :department, "Sales"%> 
    <%= f.label :department, "Sales" %>
    <%= f.radio_button :department, "Marketing"%>
    <%= f.label :department, "Marketing"%>
    <%= f.radio_button :department, "Technical" %>
    <%= f.label :department, "Technical" %>
  </div>
  <br>
    <%= f.label :message%>
    <%= f.text_area :message, class: "form-control" %>
  <br>

<%= f.submit %>
<% end %>
<!-- Delete button needs to be outside the form. -->
<%= button_to "Delete", (@support_request), method: :delete, data: {confirm: "Are you sure?"} %>
